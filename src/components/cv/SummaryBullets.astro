---
interface Props {
    hidden?: boolean;
}
const {hidden = false} = Astro.props;
if (hidden) {
    return;
}
---

<style>
    ul {
        margin: 0;
        padding: 0;
        list-style: none;
    }
    li {
        margin-bottom: 0.5rem;
    }
    li.explanation {
        margin-left: 0.5rem;
        color: gray;
        font-size: 0.8em;
    }
</style>

<hr />

